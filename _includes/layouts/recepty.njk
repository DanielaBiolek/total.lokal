<main class="obsah">

            <div class="kontejner">
                {% for post in collections.recept %}

                    <a class="postrecept__link" href="{{ post.url }}">
                        <div class="postrecept">
                            <img class="postrecept__img" src="/images/{{ post.data.foto}}" alt="{{ post.data.alt}}">
                            <h2 class="postrecept__title">{{ post.data.title }}</h2>
                        </div>
                    </a>

                {% endfor %}
            </div>
</main>