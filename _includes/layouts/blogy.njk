<main class="obsah">

 
    <div class="kontejner2">

        {% for post in collections.blog %}
        
            <a class="postblog__link" href="{{ post.url }}">
                <div class="postblog">
                    <img class="postblog__img" src="/images/{{ post.data.foto}}" alt="{{ post.data.alt}}">
                    <div class="postblog__box">
                            <h2 class="postblog__title post__title">{{ post.data.title }} </h2>
                            <p class="postblog__perex perex__size"> {{ post.data.perex }} </p>
                    </div>
                </div>
            </a>
        {% endfor %}
    <div>

</main>